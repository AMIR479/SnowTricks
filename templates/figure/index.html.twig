{% extends 'base.html.twig' %}

{% block title %}Figure index{% endblock %}

{% block body %}
    <h1 class="figure mt-5 mb-3 text-center">Liste des figures</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for figure in figures %}
            <tr>
                <td>{{ figure.id }}</td>
                <td>{{ figure.nom }}</td>
                <td>{{ figure.description }}</td>
                <td>{{ figure.createdAt ? figure.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_figure_show', {'id': figure.id}) }}">show</a>
                    <a href="{{ path('app_figure_edit', {'id': figure.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="record  text-danger" colspan="5">Aucune figure trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_figure_new') }}">Créer une nouvelle figure</a>
{% endblock %}
